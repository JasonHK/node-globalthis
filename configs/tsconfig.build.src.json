{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "rootDir": "../src",
        "lib": [
            "DOM",
            "ES2015",
        ],
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
    },
    "include": [
        "../src/**/*.ts",
    ],
}
